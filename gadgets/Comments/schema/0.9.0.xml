<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>

    <name><variable>database</variable></name>

    <table>
        <name><variable>table_prefix</variable>comments</name>
        <declaration>

            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
            </field>

            <field>
                <name>gadget</name>
                <type>text</type>
                <length>32</length>
            </field>

            <field>
                <name>action</name>
                <type>text</type>
                <length>32</length>
            </field>

            <field>
                <name>reference</name>
                <was>gadget_reference</was>
                <type>integer</type>
                <default>0</default>
            </field>

            <field>
                <name>user</name>
                <type>integer</type>
            </field>

            <field>
                <name>name</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>email</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>url</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>ip</name>
                <type>text</type>
                <length>20</length>
                <default>127.0.0.1</default>
            </field>

            <field>
                <name>msg_txt</name>
                <type>text</type>
            </field>

            <field>
                <name>msg_key</name>
                <type>text</type>
                <length>32</length>
            </field>

            <field>
                <name>reply</name>
                <type>text</type>
            </field>

            <field>
                <name>replier</name>
                <type>integer</type>
            </field>

            <field>
                <name>createtime</name>
                <type>timestamp</type>
            </field>

            <field>
                <name>old_status</name>
                <was>status</was>
                <type>text</type>
                <length>10</length>
                <default>approved</default>
            </field>

            <field>
                <name>new_status</name>
                <type>integer</type>
                <length>2</length>
                <default>1</default>
            </field>

            <index>
                <name><variable>table_prefix</variable>comments_gas</name>
                <field>
                    <name>gadget</name>
                </field>
                <field>
                    <name>action</name>
                </field>
                <field>
                    <name>status</name>
                </field>
            </index>

            <index>
                <name><variable>table_prefix</variable>comments_gar</name>
                <field>
                    <name>gadget</name>
                </field>
                <field>
                    <name>action</name>
                </field>
                <field>
                    <name>reference</name>
                </field>
            </index>

            <index>
                <name><variable>table_prefix</variable>comments_mk</name>
                <field>
                    <name>msg_key</name>
                </field>
            </index>

        </declaration>
    </table>

</database>
