<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>

 <name><variable>database</variable></name>

 <table>
    <name><variable>table_prefix</variable>address_book</name>
    <declaration>

        <field>
            <name>id</name>
            <type>integer</type>
            <notnull>true</notnull>
            <autoincrement>true</autoincrement>
        </field>

        <field>
            <name>user</name>
            <type>integer</type>
            <notnull>true</notnull>
            <description>creator user id</description>
        </field>

        <field>
            <name>name</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>nickname</name>
            <type>text</type>
            <length>64</length>
        </field>

        <field>
            <name>title</name>
            <type>text</type>
            <length>64</length>
        </field>

        <field>
            <name>image</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>notes</name>
            <type>text</type>
        </field>

        <field>
            <name>related</name>
            <type>integer</type>
            <default>0</default>
            <description>this contact(AddressBook) maybe link or related with another contact(AddressBook)</description>
        </field>

        <field>
            <name>user_link</name>
            <type>integer</type>
            <default>0</default>
            <description>link to a user in users gadget</description>
        </field>

        <field>
            <name>key</name>
            <type>text</type>
        </field>

        <field>
            <name>tel_home</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>tel_work</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>tel_other</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>adr_home</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>adr_work</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>adr_other</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>email_home</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>email_work</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>email_other</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>url</name>
            <type>text</type>
        </field>

        <field>
            <name>public</name>
            <type>boolean</type>
            <default>false</default>
            <description>is information public and other users can see</description>
        </field>

        <field>
            <name>createtime</name>
            <type>integer</type>
            <length>16</length>
            <default>0</default>
        </field>

        <field>
            <name>updatetime</name>
            <type>integer</type>
            <length>16</length>
            <default>0</default>
        </field>

    </declaration>
 </table>

 <table>
    <name><variable>table_prefix</variable>address_group</name>
    <declaration>

        <field>
            <name>id</name>
            <type>integer</type>
            <notnull>true</notnull>
            <autoincrement>true</autoincrement>
        </field>

        <field>
            <name>name</name>
            <type>text</type>
            <length>32</length>
            <notnull>true</notnull>
        </field>

        <field>
            <name>description</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>user</name>
            <type>integer</type>
            <notnull>true</notnull>
        </field>

        <index>
            <name><variable>table_prefix</variable>address_group_name</name>
            <unique>true</unique>
            <field>
                <name>name</name>
            </field>
        </index>

    </declaration>
 </table>

 <table>
    <name><variable>table_prefix</variable>address_book_group</name>
    <declaration>
        <field>
            <name>id</name>
            <type>integer</type>
            <notnull>true</notnull>
            <autoincrement>true</autoincrement>
        </field>

        <field>
            <name>address</name>
            <type>integer</type>
            <notnull>true</notnull>
        </field>

        <field>
            <name>group</name>
            <type>integer</type>
            <notnull>true</notnull>
        </field>

        <field>
            <name>user</name>
            <type>integer</type>
            <notnull>true</notnull>
        </field>

        <index>
            <name><variable>table_prefix</variable>address_book_group_adr</name>
            <field>
                <name>address</name>
            </field>
        </index>

        <index>
            <name><variable>table_prefix</variable>address_book_group_gi</name>
            <field>
                <name>group</name>
            </field>
        </index>

        <index>
            <name><variable>table_prefix</variable>address_book_group_ui</name>
            <field>
                <name>user</name>
            </field>
        </index>

    </declaration>
 </table>

</database>
