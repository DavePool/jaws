<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>

 <name><variable>database</variable></name>

 <table>
    <name><variable>table_prefix</variable>address_book</name>
    <declaration>

        <field>
            <name>id</name>
            <type>integer</type>
            <notnull>true</notnull>
            <autoincrement>true</autoincrement>
        </field>

        <field>
            <name>user</name>
            <type>integer</type>
            <notnull>true</notnull>
        </field>

        <field>
            <name>name</name>
            <type>text</type>
            <length>64</length>
        </field>

        <field>
            <name>company</name>
            <type>text</type>
            <length>64</length>
        </field>

        <field>
            <name>title</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>email</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>url</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>notes</name>
            <type>text</type>
        </field>

        <field>
            <name>public</name>
            <type>boolean</type>
            <default>false</default>
            <description>is information public and other users can see</description>
        </field>

        <field>
            <name>address</name>
            <type>text</type>
            <length>255</length>
        </field>

        <field>
            <name>postal_code</name>
            <type>text</type>
            <length>24</length>
        </field>

        <field>
            <name>phone_number</name>
            <type>text</type>
            <length>48</length>
        </field>

        <field>
            <name>mobile_number</name>
            <type>text</type>
            <length>48</length>
        </field>

        <field>
            <name>fax_number</name>
            <type>text</type>
            <length>48</length>
        </field>

        <field>
            <name>createtime</name>
            <type>integer</type>
            <length>16</length>
            <default>0</default>
        </field>

        <field>
            <name>updatetime</name>
            <type>integer</type>
            <length>16</length>
            <default>0</default>
        </field>

    </declaration>
 </table>

 <table>
    <name><variable>table_prefix</variable>address_group</name>
    <declaration>

        <field>
            <name>id</name>
            <type>integer</type>
            <notnull>true</notnull>
            <autoincrement>true</autoincrement>
        </field>

        <field>
            <name>name</name>
            <type>text</type>
            <length>32</length>
            <notnull>true</notnull>
        </field>

        <field>
            <name>description</name>
            <type>text</type>
            <length>128</length>
        </field>

        <index>
            <name><variable>table_prefix</variable>address_group_name</name>
            <unique>true</unique>
            <field>
                <name>name</name>
            </field>
        </index>

    </declaration>
 </table>

 <table>
    <name><variable>table_prefix</variable>address_book_group</name>
    <declaration>
        <field>
            <name>id</name>
            <type>integer</type>
            <notnull>true</notnull>
            <autoincrement>true</autoincrement>
        </field>

        <field>
            <name>address</name>
            <type>integer</type>
            <notnull>true</notnull>
        </field>

        <field>
            <name>group</name>
            <type>integer</type>
            <notnull>true</notnull>
        </field>

        <field>
            <name>user</name>
            <type>integer</type>
            <notnull>true</notnull>
        </field>

        <index>
            <name><variable>table_prefix</variable>address_book_group_adr</name>
            <field>
                <name>address</name>
            </field>
        </index>

        <index>
            <name><variable>table_prefix</variable>address_book_group_gi</name>
            <field>
                <name>group</name>
            </field>
        </index>

        <index>
            <name><variable>table_prefix</variable>address_book_group_ui</name>
            <field>
                <name>user</name>
            </field>
        </index>

    </declaration>
 </table>

</database>
