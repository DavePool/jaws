<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name><variable>database</variable></name>

    <table>
        <name><variable>table_prefix</variable>notification</name>
        <declaration>

            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
            </field>

            <field>
                <name>gadget</name>
                <type>text</type>
                <length>32</length>
            </field>

            <field>
                <name>action</name>
                <type>text</type>
                <length>32</length>
            </field>

            <field>
                <name>user</name>
                <type>integer</type>
                <notnull>true</notnull>
            </field>

            <field>
                <name>title</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>description</name>
                <type>text</type>
            </field>

            <field>
                <name>priority</name>
                <type>integer</type>
                <default>3</default>
                <description>0:disable 1:critical 2:warning 3:notice 4:info 5:routin</description>
            </field>

            <field>
                <name>read</name>
                <type>boolean</type>
                <default>false</default>
            </field>

            <field>
                <name>create_time</name>
                <type>integer</type>
                <length>8</length>
            </field>

        </declaration>
    </table>

</database>