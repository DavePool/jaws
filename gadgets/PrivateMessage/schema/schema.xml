<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name><variable>database</variable></name>

    <table>
        <name><variable>table_prefix</variable>pm_messages</name>
        <declaration>

            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
            </field>

            <field>
                <name>parent_id</name>
                <type>integer</type>
            </field>

            <field>
                <name>from</name>
                <type>integer</type>
                <notnull>true</notnull>
            </field>

            <field>
                <name>subject</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>body</name>
                <type>text</type>
            </field>

            <field>
                <name>status</name>
                <type>integer</type>
                <length>1</length>
                <default>0</default>
            </field>

            <field>
                <name>insert_time</name>
                <type>integer</type>
                <length>8</length>
            </field>

            <field>
                <name>update_time</name>
                <type>integer</type>
                <length>8</length>
            </field>

        </declaration>
    </table>

    <table>
        <name><variable>table_prefix</variable>pm_message_attachments</name>
        <declaration>

            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
            </field>

            <field>
                <name>message_id</name>
                <type>integer</type>
            </field>

            <field>
                <name>host_filename</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>user_filename</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>file_size</name>
                <type>integer</type>
            </field>

            <field>
                <name>hints_count</name>
                <type>integer</type>
                <length>4</length>
                <default>0</default>
            </field>

        </declaration>
    </table>

    <table>
        <name><variable>table_prefix</variable>pm_recipients</name>
        <declaration>

            <field>
                <name>message_id</name>
                <type>integer</type>
                <notnull>true</notnull>
            </field>

            <field>
                <name>recipient</name>
                <type>integer</type>
                <notnull>true</notnull>
            </field>

            <field>
                <name>status</name>
                <type>integer</type>
                <length>1</length>
                <default>0</default>
            </field>

            <field>
                <name>update_time</name>
                <type>integer</type>
                <length>8</length>
            </field>

        </declaration>
    </table>
</database>