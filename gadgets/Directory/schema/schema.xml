<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
  <name><variable>database</variable></name>

  <table>
    <name><variable>table_prefix</variable>directory</name>
    <declaration>

      <field>
        <name>id</name>
        <type>integer</type>
        <notnull>true</notnull>
        <autoincrement>true</autoincrement>
      </field>

      <field>
        <name>parent</name>
        <type>integer</type>
        <notnull>true</notnull>
      </field>

      <field>
        <name>user</name>
        <type>integer</type>
        <notnull>true</notnull>
        <description>file owner but not necessarily the creator</description>
      </field>

      <field>
        <name>is_dir</name>
        <type>boolean</type>
        <default>false</default>
      </field>

      <field>
        <name>title</name>
        <type>text</type>
        <length>128</length>
      </field>

      <field>
        <name>description</name>
        <type>text</type>
      </field>

      <field>
        <name>filename</name>
        <type>text</type>
        <length>128</length>
      </field>

      <field>
        <name>filetype</name>
        <type>text</type>
        <length>64</length>
      </field>

      <field>
        <name>filesize</name>
        <type>integer</type>
        <length>8</length>
      </field>

      <field>
        <name>url</name>
        <type>text</type>
        <length>255</length>
      </field>

      <field>
        <name>key</name>
        <type>text</type>
        <length>32</length>
        <description>is used for creating a shared link to file</description>
      </field>

      <field>
        <name>shared</name>
        <type>boolean</type>
        <description>is file shared to others</description>
      </field>

      <field>
        <name>reference</name>
        <type>integer</type>
        <description>reference to original file that is shared</description>
      </field>

      <field>
        <name>owner</name>
        <type>integer</type>
        <notnull>true</notnull>
        <description>the creator user of the file, may be equal to user</description>
      </field>

      <field>
        <name>createtime</name>
        <type>integer</type>
        <length>8</length>
      </field>

      <field>
        <name>updatetime</name>
        <type>integer</type>
        <length>8</length>
      </field>

    </declaration>
  </table>

</database>