<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
  <name><variable>database</variable></name>

  <table>
    <name><variable>table_prefix</variable>ec_events</name>
    <declaration>

      <field>
        <name>id</name>
        <type>integer</type>
        <notnull>true</notnull>
        <autoincrement>true</autoincrement>
      </field>

      <field>
        <name>user</name>
        <type>integer</type>
        <notnull>true</notnull>
      </field>

      <field>
        <name>subject</name>
        <type>text</type>
        <length>128</length>
      </field>

      <field>
        <name>location</name>
        <type>text</type>
        <length>128</length>
      </field>

      <field>
        <name>description</name>
        <type>text</type>
        <length>512</length>
      </field>

      <field>
        <name>start_time</name>
        <type>integer</type>
        <length>8</length>
      </field>

      <field>
        <name>stop_time</name>
        <type>integer</type>
        <length>8</length>
      </field>

      <field>
        <name>reminder</name>
        <type>integer</type>
        <length>8</length>
      </field>

      <field>
        <name>type</name>
        <type>integer</type>
      </field>

      <field>
        <name>priority</name>
        <type>integer</type>
        <default>0</default>
      </field>

      <field>
        <name>shared</name>
        <type>boolean</type>
        <default>false</default>
      </field>

      <field>
        <name>createtime</name>
        <type>integer</type>
        <length>8</length>
      </field>

      <field>
        <name>updatetime</name>
        <type>integer</type>
        <length>8</length>
      </field>

      <index>
        <name><variable>table_prefix</variable>ec_event_time_idx</name>
        <field>
          <name>start_time</name>
        </field>
        <field>
          <name>stop_time</name>
        </field>
      </index>

    </declaration>
  </table>

  <table>
    <name><variable>table_prefix</variable>ec_users</name>
    <declaration>

      <field>
        <name>id</name>
        <type>integer</type>
        <notnull>true</notnull>
        <autoincrement>true</autoincrement>
      </field>

      <field>
        <name>event_id</name>
        <type>integer</type>
        <notnull>true</notnull>
      </field>

      <field>
        <name>user_id</name>
        <type>integer</type>
        <notnull>true</notnull>
      </field>

      <field>
        <name>owner_id</name>
        <type>integer</type>
        <notnull>true</notnull>
      </field>

    </declaration>
  </table>

</database>