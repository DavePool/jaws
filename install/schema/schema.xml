            </field>

            <field>
                <name>gadget_reference</name>
                <type>integer</type>
                <default>0</default>
            </field>

            <field>
                <name>gadget</name>
                <type>text</type>
                <length>80</length>
            </field>

            <field>
                <name>name</name>
                <type>text</type>
